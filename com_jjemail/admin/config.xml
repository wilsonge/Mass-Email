<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
	>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_jjemail"
			section="component"
		/>
	</fieldset>
	<fieldset
		name="filesettings"
		label="COM_JJEMAIL_FILE_SETTINGS"
		description="COM_JJEMAIL_FILE_SETTINGS_DESC"
	>
		<field
			name="fileSize"
			type="text"
			label="COM_JJEMAIL_FILE_SETTINGS_SIZE"
			description="COM_JJEMAIL_FILE_SETTINGS_SIZE_DESC"
			class="inputbox"
			filter="integer"
			default="10"
		/>
		<field
			name="fileTypes"
			type="text"
			label="COM_JJEMAIL_FILE_SETTINGS_TYPES"
			description="COM_JJEMAIL_FILE_SETTINGS_TYPES_DESC"
			class="inputbox"
			default="jpg,gif,jpeg,png,doc,docx,xls,xlsx,pdf"
		/>
	</fieldset>
</config>